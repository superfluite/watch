<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.stopwatch.app.MainActivity">

<EditText
    android:id="@+id/edit_hour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="15dp"
    android:layout_alignBottom="@+id/textView"
    android:layout_toLeftOf="@+id/textView"
    android:hint="Hour"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=":"
    android:id="@+id/textView2"
    android:layout_above="@+id/start_stop_button"
    android:layout_toRightOf="@+id/edit_min"
    android:layout_marginLeft="16dp" />

<EditText
    android:id="@+id/edit_min"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="97dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:hint="Min"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=":"
    android:id="@+id/textView"
    android:layout_alignBottom="@+id/edit_min"
    android:layout_toLeftOf="@+id/edit_min"
    android:layout_marginRight="15dp" />

<EditText
    android:id="@+id/edit_sec"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/edit_min"
    android:layout_toRightOf="@+id/textView2"
    android:layout_marginLeft="15dp"
    android:hint="Sec"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start_stop_button"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/edit_hour"
        android:layout_alignLeft="@+id/edit_hour"
        android:layout_alignStart="@+id/edit_hour"
        android:layout_alignRight="@+id/edit_sec"
        android:layout_alignEnd="@+id/edit_sec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="@dimen/abc_action_bar_title_text_size"
        android:id="@+id/textView3"
        android:layout_below="@+id/edit_hour"
        android:layout_alignLeft="@+id/edit_hour"
        android:layout_alignStart="@+id/edit_hour"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/edit_sec"
        android:layout_alignEnd="@+id/edit_sec"
        android:gravity="center"/>

</RelativeLayout>
